{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}

<div id="enterPostcode">
  <form id="postcodeLookup">
    <input type="hidden" name="_csrf" value="{{ csrfToken }}">
    {{ govukInput({
      id: "postcode",
      name: "postcode",
      classes: "govuk-input--width-10",
      label: {
        text: enterPostcode
      },
      value: previousPostcode,
      errorMessage: {
          text: postcodeErrorText
        }
    }) }}

    <p class="govuk-body">
      <a href="#" id="manualAddress" class="govuk-link">{{ manualAddress }}</a>
    </p>

    {% set languageParam = "" %}
    {% if "lng=cy" in currentUrl %}
      {% set languageParam = "?lng=cy" %}
    {% else %}
      {% set languageParam = "?lng=en" %}
    {% endif %}

    {{ govukButton({
      attributes: {
        id: "findAddressButton"
      },
      text: findAddress,
      type: "submit",
      classes: "govuk-!-margin-right-2",
      preventDoubleClick: true
    }) }}

    {{ govukButton({
          attributes: {
            id: "saveAsDraftButton"
          },
          text: saveAsDraft,
          type: submit,
          href: PageUrls.CLAIM_SAVED + languageParam,
          classes: "govuk-button--secondary",
          preventDoubleClick: true
        }) }}
  </form>
</div>