{% extends "template.njk" %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "govuk/components/warning-text/macro.njk" import govukWarningText %}
{% from "govuk/components/table/macro.njk" import govukTable %}

{% block beforeContent %}
  {{ super() }}
  {% include "back-link.njk"%}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row ">
    <div class="govuk-grid-column-full">
      <h1 class="govuk-heading-xl govuk-!-margin-bottom-4">{{ h1 }}</h1>
      <p class="govuk-body govuk-!-margin-bottom-4">{{ amendClaim }}</p>

      {{ govukTable({
        firstCellIsHeader: false,
        head: [
          {
            text: "Date uploaded"
          },
          {
            text: "Document"
          }
        ],
        rows: [
          [
            {
              text: "22 April 2022"
            },
            {
              text: getContentSafe(link)
            }
          ]
        ]
      }) }}

      {{ govukTable({
        caption: "Application details",
        captionClasses: "govuk-table__caption--m",
        firstCellIsHeader: true,
        rows: [
          [
            {
              text: "Claim type"
            },
            {
              text: "[Selected claim types]"
            }
          ]
        ]
      }) }}

      {{ govukTable({
        caption: personalDetails.header,
        captionClasses: "govuk-table__caption--m",
        firstCellIsHeader: true,
        rows: [
          [
            {
              text: personalDetails.dob
            },
            {
              text: "" if userCase.dobDate.day === undefined else userCase.dobDate.day+"-"+userCase.dobDate.month+"-"+userCase.dobDate.year
            }
          ],
          [
            {
              text: personalDetails.sex
            },
            {
              text: userCase.claimantSex
            }
          ],
          [
            {
              text: personalDetails.title
            },
            {
              text: userCase.preferredTitle if userCase.preferredTitle else "Not Selected"
            }
          ],
          [
            {
              text: personalDetails.contactOrHomeAddress
            },
            {
              text: "" if userCase.address1 === undefined else userCase.address1+", "+userCase.addressCounty+", "+userCase.addressPostcode+", "+userCase.addressTown
            }
          ],
          [
            {
              text: personalDetails.telephone
            },
            {
              text: "Not Provided" if userCase.telNumber.length === 0 else userCase.telNumber
            }
          ],
          [
            {
              text: personalDetails.howToBeContacted
            },
            {
              text:  userCase.claimantContactPreference
            }
          ],
          [
            {
              text: personalDetails.takePartInHearing
            },
            {
              text: userCase.hearingPreferences
            }
          ],
          [
            {
              text: personalDetails.disability
            },
            {
              text: userCase.reasonableAdjustments + ", " + userCase.reasonableAdjustmentsDetail if userCase.reasonableAdjustmentsDetail else userCase.reasonableAdjustments
            }
          ]
        ]
      }) }}

      {{ govukTable({
        caption: "Employment details",
        captionClasses: "govuk-table__caption--m",
        firstCellIsHeader: true,
        rows: [
          [
            {
              text: "Did you work ..."
            },
            {
              text: ""
            }
          ],
          [
            {
              text: ""
            },
            {
              text: ""
            }
          ]
        ]
      }) }}


    </div>
  </div>
{% endblock %}
