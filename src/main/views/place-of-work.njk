{% extends "template.njk" %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}

{% block beforeContent %}
  {{ super() }}
  {% include "back-link.njk"%}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      {% block errorSummary %}
        {% include "./error-summary.njk" %}
      {% endblock %}

      {% include "./address/postcodeError.njk" %}

      {% if not stillWorking %}
        <h1 class="govuk-heading-xl govuk-!-margin-bottom-4 ">{{ h1.noLongerWorking }}</h1>
        <p class="govuk-body">{{ pText.noLongerWorking | safe}}</p>
      {% else %}
        <h1 class="govuk-heading-xl govuk-!-margin-bottom-4 ">{{ h1.workingOrNotice }}</h1>
        <p class="govuk-body">{{ pText.workingOrNotice | safe}}</p>
      {% endif %}

      {% include "./address/postcodeEnter.njk" %}
      {% include "./address/postcodeSelect.njk" %}

      {% block form %}
        {% include "form/form.njk"%}
      {% endblock %}
    </div>
  </div>
{% endblock %}
