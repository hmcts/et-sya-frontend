{% extends "template.njk" %}

{% block beforeContent %}
  {{ super() }}
  {% include "back-link.njk"%}
{% endblock %}

{% block content %}
  {% block errorSummary %}
    {% include "error-summary.njk" %}
  {% endblock %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      <h1 class="govuk-heading-xl govuk-!-margin-bottom-4 ">{{ h1 }}</h1>
      <p class="govuk-body ">{{ p1 }}</p>
      <ul class="govuk-list govuk-list--bullet">
        <li>{{ bullet1 }} </li>
        <li>{{ bullet2 }} </li>        
        <li>{{ bullet3 }} </li>
      </ul>
      <p class="govuk-body ">{{ p2 }}</p>
      <div class="govuk-hint"> {{ selectAllHint }} </div>
      {% block form %}
        {% include "form/form.njk" %}
      {% endblock %}
    </div>
  </div>
{% endblock %}
