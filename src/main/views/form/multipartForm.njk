{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/inset-text/macro.njk" import govukInsetText %}

<!--  Ehe form body will not be parsed until after the request passes that middleware, we need to send the csrf in the action -->
<form class="form" id="main-form" method="post" action="{{postAddress}}?_csrf={{ csrfToken }}" novalidate="novalidate" enctype="multipart/form-data">
  <input type="hidden" name="_csrf" value={{ csrfToken }}>
  {% block form_content %}
    {% include "./fields.njk" %}
    {% if "got-a-notice-period" in currentUrl %}
      {{ govukInsetText({
        text: noticeLengthInsetText
      }) }}
    {% endif %}
  {% endblock %}

  <div class="govuk-form-group">
    {{
      govukButton({
        text: getContent(form.submit.text),
        classes: form.submit.classes,
        type: "submit",
        preventDoubleClick: true,
        attributes: {
          id: 'main-form-submit'
        }
      }) if getContent(form.submit.text)
    }}

    {{
      govukButton({
        text: getContent(form.saveForLater.text),
        classes: form.saveForLater.classes,
        preventDoubleClick: true,
        name: 'saveForLater',
        value: true,
        attributes: {
          id: 'main-form-save-for-later'
        },
        value: true
      }) if getContent(form.saveForLater.text)
    }}
  </div>
</form>
