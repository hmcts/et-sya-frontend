{% extends "template.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block beforeContent %}
  {{ super() }}
  {% include "back-link.njk"%}
{% endblock %}

{% block content %}

  <h1 class="govuk-heading-xl govuk-!-margin-bottom-2">{{h1}} TODO</h1>

  {% for section in sections %}
  
  <table class="govuk-table">
    <thead class="govuk-table__head">
      <tr class="govuk-table__row">
        <th scope="col" class="govuk-table__header">{{ section.title }}</th>
      </tr>
    </thead>
    {% for link in section.links %}

    <tbody class="govuk-table__body">
      <tr class="govuk-table__row">
        <th scope="row" class="govuk-table__cell">  
        {% if link.url !="" %}
        <a href= "{{ link.url }}" class="govuk-link">
        {{ link.linkTxt }}
        </a>
        {% else %}
        {{link.linkTxt}}
        {% endif %}
        </th>
        <th scope="row" class="govuk-table__cell">TODO</th>
      </tr>
      {% endfor %}
      </tbody>
  </table>
  {% endfor %}


  {{ govukButton({
    text: saveForLater,
    classes: "govuk-button--secondary",
    href: PageUrls.CLAIM_SAVED
  }) }}

{% endblock %}
