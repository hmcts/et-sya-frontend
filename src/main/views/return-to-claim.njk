{% extends "template.njk" %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}

{% block beforeContent %}
  {{ super() }}
  {% include "back-link.njk"%}
{% endblock %}

{% block content %}
	 {{ 
    govukErrorSummary({
      titleText: errorSummaryTitle,
      errorList: getErrors(form.fields)
    }) if getErrors(form.fields).length > 0
  }}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      <h1 class="govuk-heading-xl govuk-!-margin-bottom-4 ">{{ h1 }}</h1>
      <p class="govuk-body">{{ p1 | safe}}</p>
      <p class="govuk-body govuk-!-font-weight-bold">{{ p2 }}</p>
    <div>
  <div>
  
  {% block form %}
    {% include "form/form.njk"%}
  {% endblock %}

  <p class="govuk-body">{{ p3 | safe }}</p>
{% endblock %}
