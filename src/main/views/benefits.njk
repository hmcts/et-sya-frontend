{% extends "template.njk" %}
{% from "govuk/components/details/macro.njk" import govukDetails %}

{% block beforeContent %}
  {{ super() }}
  {% include "back-link.njk"%}
{% endblock %}

{% block content %}
  {% block errorSummary %}
    {% include "error-summary.njk" %}
  {% endblock %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      
      <h1 class="govuk-heading-xl govuk-!-margin-bottom-4 ">{{ h1 }}</h1>

      <p class="govuk-body">{{ p1 }}</p>

      {% block form %}
        {{ govukDetails({
          summaryText: benefitsTitle,
          text: benefitsHelpTxt
        }) }}
          
        {% include "form/form.njk" %}
      {% endblock %}
      
    </div>
  </div>
{% endblock %}