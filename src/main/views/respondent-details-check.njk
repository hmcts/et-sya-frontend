{% extends "template.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}

{% block beforeContent %}
  {{ super() }}
  {% include "back-link.njk"%}
{% endblock %}

{% block content %}
  {% block errorSummary %}
   {% include "error-summary.njk" %}
  {% endblock %}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l govuk-!-margin-bottom-4">{{ title }}</h1>
            {% for respondent in respondents %}
            <h2 class="govuk-heading-m">{{ subTitle }} {{loop.index}}</h2>
            <hr/>
              {{ govukSummaryList({
                rows: getRespondentDetailsSection(respondent, loop.index, translations)
              })

              }}

            {% endfor %}

      {% block form %}
        {% include "form/form.njk"%}
      {% endblock %}
    </div>
  </div>
   {% set languageParam = "" %}
  {% if "lng=cy" in currentUrl %}
      {% set languageParam = "?lng=cy" %}
      {% else %}
      {% set languageParam = "?lng=en" %}
    {% endif %}
  <div class="govuk-grid-row">
      <div class="govuk-button-group">
        {{ govukButton({
          text: saveAndContinue,
          href: "/employment-respondent-task-check" + languageParam
        }) }}

        {{ govukButton({
          text: saveForLater,
          classes: "govuk-button--secondary",
          href: "/your-claim-has-been-saved" + languageParam
        }) }}
      </div>
    </div>
{% endblock %}
