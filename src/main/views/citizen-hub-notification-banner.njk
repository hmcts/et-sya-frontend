{% from "govuk/components/notification-banner/macro.njk" import govukNotificationBanner %}

{% set htmlForNotification %}

{% if showAcknowledgementAlert %}
    <h3 class="govuk-notification-banner__heading">
        {{notificationBanner.acknowledgement.header}}
    </h3>

    <p class="govuk-body">
        <a class="govuk-link" href="/document/acknowledgement">{{notificationBanner.acknowledgement.link}}</a>.
    </p>

    <p class="govuk-body">
        {{notificationBanner.acknowledgement.p1}}
    </p>

    {% if respondentResponseDeadline %}
        <p class="govuk-body">
            {{notificationBanner.acknowledgement.p2 | safe}}
            {{respondentResponseDeadline}}.
        </p>
    {% endif %}
{% endif %}

{% if showRejectionAlert %}
    <h3 class="govuk-notification-banner__heading">
        {{notificationBanner.rejection.header}}
    </h3>

    <p class="govuk-body">
        {{notificationBanner.rejection.p1}}
    </p>

    <p class="govuk-body">
        <a class="govuk-link" href="/document/rejection">{{notificationBanner.rejection.link}}</a>.
    </p>

{% endif %}

{% if showRespondentRejection %}
    <h3 class="govuk-notification-banner__heading">
        {{notificationBanner.respondentRejection.header}}
    </h3>

    <p class="govuk-body">
        <a class="govuk-link" href="/document/response-rejection">{{notificationBanner.respondentRejection.link}}</a>.
    </p>

{% endif %}

{% if showRespondentAcknowledgement %}
    <h3 class="govuk-notification-banner__heading">
        {{notificationBanner.respondentAcknowledgement.header}}
    </h3>

    <p class="govuk-body">
        <a class="govuk-link" href="/document/response-acknowledgement">{{notificationBanner.respondentAcknowledgement.link}}</a>.
    </p>

{% endif %}

{% endset %}

{% if showAcknowledgementAlert or showRejectionAlert or showRespondentRejection or showRespondentAcknowledgement %}
    {{ govukNotificationBanner({
   html: htmlForNotification
  }) }}
{% endif %}