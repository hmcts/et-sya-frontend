{% extends "template.njk" %}
{% from "govuk/components/warning-text/macro.njk" import govukWarningText %}

{% block beforeContent %}
  {{ super() }}
  {% include "back-link.njk"%}
{% endblock %}

{% block content %}
  {% block errorSummary %}
    {% include "error-summary.njk" %}
  {% endblock %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      <h1 class="govuk-heading-xl govuk-!-margin-bottom-4 ">{{ title }}</h1>
      <p class="govuk-body ">{{ p1 }}</p>

      <p class="govuk-body ">{{ p2 }}</p>
      <ul class="govuk-list govuk-list--bullet">
        <li>{{ p2li1 }}</li>
        <li>{{ p2li2 }}</li>
        <li>{{ p2li3 }}</li>
        <li>{{ p2li4 }}</li>
      </ul>

      <p class="govuk-body ">{{ p3 }}</p>
      <ul class="govuk-list govuk-list--bullet">
        <li>{{ p3li1 }}</li>
        <li>{{ p3li2 }}</li>
        <li>{{ p3li3 }}</li>
        <li>{{ p3li4 }}</li>
      </ul>

      {{ govukWarningText({
        text: warning,
        iconFallbackText: "Warning"
      }) }}

      {% block form %}
        {% include "form/form.njk" %}
      {% endblock %}
    </div>
  </div>
{% endblock %}
