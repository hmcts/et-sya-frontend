{% extends "template.njk" %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block beforeContent %}
  {{ super() }}
  {{ govukBackLink({
  text: back,
  href: "/"
}) }}
{% endblock %}

{% block content %}
  <div class="govuk-panel--informational">
      <h1 class="govuk-panel__title">{{ h1 }}</h>
    <div class="govuk-panel__body">
        <p>{{ p1 }}</p>
        <p>{{ p2 }}</p>
    </div>   
  </div> 

  <div class="govuk-button-group">
    {{ govukButton({
      text: "Continue",
      href: "/"
    }) }}

    {{ govukButton({
      text: "Save for later",
      classes: "govuk-button--secondary",
      href: "/your-claim-has-been-saved"
    }) }}
  </div>

{% endblock %}