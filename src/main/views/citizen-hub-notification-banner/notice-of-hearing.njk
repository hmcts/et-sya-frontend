{% if showNoticeOfHearingAlert %}

  {% set htmlForNoticeOfHearingAlert %}
    <h3 class="govuk-notification-banner__heading">
      {{ notificationBanner.acknowledgement.header }}
    </h3>

    <p class="govuk-body">
      <a class="govuk-link" href="/case-document/notice-of-hearing">{{ notificationBanner.acknowledgement.link }}</a>.
    </p>

    <p class="govuk-body">
      {{ notificationBanner.acknowledgement.p1 }}
    </p>

    {% if respondentResponseDeadline %}
      <p class="govuk-body">
        <span class="govuk-body govuk-!-font-weight-bold">{{ notificationBanner.acknowledgement.p2a }}</span><br>
        {{ notificationBanner.acknowledgement.p2b }} {{ respondentResponseDeadline }}.
      </p>
    {% endif %}
  {% endset %}

  {{ govukNotificationBanner({
    html: htmlForNoticeOfHearingAlert,
    titleText: important
  }) }}

{% endif %}
