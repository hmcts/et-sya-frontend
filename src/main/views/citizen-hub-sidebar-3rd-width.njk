<div class="govuk-grid-column-one-third">
  <p class='govuk-body'>
    {{callEmployer}}
  </p>

  <p class='govuk-body'>
    {{contactText}}
    {% if respondentIsSystemUser %}
      <a href="{{PageUrls.CONTACT_THE_TRIBUNAL + languageParam}}">
      {% else %}
        <a href="{{PageUrls.RULE92_HOLDING_PAGE + languageParam}}">
        {% endif %}
        {{contactLink}}
      </a>
    </p>

    <h2 class="govuk-heading-s">
      {{englandWales}}
    </h2>

    <p class='govuk-body'>
      {{ewNumbers | safe}}
    </p>

    <h2 class="govuk-heading-s">
      {{welsh}}
    </h2>

    <p class='govuk-body'>
      {{welshNumber}}
    </p>

    <h2 class="govuk-heading-s">
      {{scotland}}
    </h2>

    <p class='govuk-body'>
      {{scotlandNumbers | safe}}
    </p>

    <p class='govuk-body'>
      {{hours | safe}}
    </p>

    <a href="https://www.gov.uk/call-charges" target="_blank" class="govuk-link">{{callCharges}}</a>
  </div>