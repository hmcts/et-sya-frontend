{% extends "template.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/inset-text/macro.njk" import govukInsetText %}
{% from "govuk/components/warning-text/macro.njk" import govukWarningText %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      <h1 class="govuk-heading-xl govuk-!-margin-bottom-4 ">{{ pageTitle }}</h1>
      <p class="govuk-body">{{ serviceInfo }}</p>
      {{ govukInsetText({
        text: infoTxt
      }) }}
      {{ govukWarningText({
        html: warningTxt1,
        iconFallbackText: warningTxt
      }) }}
      <p class="govuk-body">{{ saveInfo }}</p>
      {{ govukWarningText({
        html: warningTxt2,
        iconFallbackText: warningTxt
      }) }}
      {{ govukButton({
        text: startNow,
        href: redirectUrl,
        isStartButton: true
      }) }}
      <ul class="govuk-list">
        <li><b>{{ claimStartedTxt }}</b></li>
        <li><a href="{{PageUrls.RETURN_TO_EXISTING + languageParam}}" class="govuk-link">{{ returnClaimTxt }}</a></li>
      </ul>
      <h2 class="govuk-heading-m">{{ contactUsHelpTitle }}</h2>
      <p class="govuk-body ">
          {{ contactUsForeword|safe }}
          <br><br>
          {{ mainTelephone|safe }}<br>
          {{ welshTelephone|safe }}<br>
          {{ scotlandTelephone|safe }}<br>
          {{ englandOrWalesTextPhone|safe }}<br>
          {{ scotlandTextPhone|safe }}<br>
          {% if i18n.language == "en" %}
            <table style="border-left:0px; border-top:0px; color:rgb(11, 12, 12);
                          font-family: "GDS Transport", arial, sans-serif; font-size:19px;">
              <tr style="border-left:0px;">
                <td style="border-left:0px; border-right:0px; ">
                  <p class="govuk-body" style="margin:0;">Webchat:</p>
                </td>
                <td style="border-left:0px; border-top:5px solid white;">
                  {{ webChatModal() }}
                </td>
                <td style="border-left:0px; border-right:0px; border-top:0px;">
                 <p class="govuk-body" style="margin:0;">({{ scotlandOnly }})</p>
                </td>
              </tr>
            </table>
            <br>
          {% endif %}
          <p class="govuk-body" style="margin:0;">
          <a href="https://www.gov.uk/call-charges" class="govuk-link">
            {{ contactCharges|safe }}
          </a>
          </p>
        </p>
      </div>
    </div>
{% endblock %}
