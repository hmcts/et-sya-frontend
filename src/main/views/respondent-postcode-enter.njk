{% extends "template.njk" %}
{% from "govuk/components/inset-text/macro.njk" import govukInsetText %}

{% block beforeContent %}
  {{ super() }}
  {% include "back-link.njk"%}
{% endblock %}

{% block content %}
  {% block errorSummary %}
    {% include "error-summary.njk" %}
  {% endblock %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <h1 class="govuk-heading-xl govuk-!-margin-bottom-4 ">{{ respondentPageHeader + respondentName }}?</h1>
     <p class="govuk-body">{{ respondentPageText }}</p>
     {{ govukInsetText({
        text: respondentInsetText
      }) }}
      {% block form %}
        {% include "form/form.njk" %}
      {% endblock %}
        <p class="govuk-body">
            <a href="{{ nonUkAddressLink }}" id="manualAddress" class="govuk-link" target="_self">{{ respondentManualAddress }}</a>
          </p>
    </div>
  </div>
{% endblock %}
