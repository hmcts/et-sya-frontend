{% extends "template.njk" %}
{% from "govuk/components/details/macro.njk" import govukDetails %}
{% from "govuk/components/table/macro.njk" import govukTable %}

{% block beforeContent %}
  {{ super() }}
  {% include "back-link.njk" %}
{% endblock %}
{% set iterator = 1 %}
{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column">
      <h1 class="govuk-heading-xl govuk-!-margin-bottom-4">{{ title }}</h1>
      {% if allDocsSorted and allDocsSorted.length != 0 %}
            <div class="scrollableTable">
              <table class="govuk-table">
                <thead class="govuk-table__head">
                  <tr class="govuk-table__row">
                    <th scope="col" class="govuk-table__header"></th>
                    <th scope="col" class="govuk-table__header">{{ document }}</th>
                    <th scope="col" class="govuk-table__header">{{ description }}</th>
                    <th scope="col" class="govuk-table__header">{{ date }}</th>
                  </tr>
                </thead>
                <tbody class="govuk-table__body">
                  {% for doc in allDocsSorted %}
                    <tr class="govuk-table__row">
                      <td class="govuk-table__cell"> {{ iterator }} </td>
                      <td class="govuk-table__cell"> {{ doc.downloadLink | safe }} </td>
                      <td class="govuk-table__cell"> {{ doc.value.shortDescription }} </td>
                      <td class="govuk-table__cell"> {{ doc.value.uploadedDocument.createdOn }} </td>
                      {% set iterator = iterator + 1 %}
                    </tr>
                  {% endfor %}
                </tbody>
              </table>
            </div>
      {% endif %}

      {% set sideBarContent %}
        {% include "./citizen-hub-sidebar.njk" %}
      {% endset %}

      {{ govukDetails({
        summaryText: contact,
        html: sideBarContent
      }) }}
    </div>
  </div>
{% endblock %}

{% block footer %}
  {% include "./footer.njk" %}
{% endblock %}
