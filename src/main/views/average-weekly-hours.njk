{% extends "template.njk" %}

{% block beforeContent %}
  {{ super() }}
  {% include "back-link.njk"%}
{% endblock %}

{% block content %}
  {% block errorSummary %}
    {% include "error-summary.njk" %}
  {% endblock %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {% if employmentStatus === notWorking %}
        <h1 class="govuk-heading-xl govuk-!-margin-bottom-4 ">{{ h1.noLongerWorking }}</h1>
        <p class="govuk-body">{{ p1.noLongerWorking }}</p>
      {% else %}
        <h1 class="govuk-heading-xl govuk-!-margin-bottom-4 ">{{ h1.workingOrNotice }}</h1>
        <p class="govuk-body">{{ p1.workingOrNotice }}</p>
      {% endif %}

      <p class="govuk-body">{{ p2 }}</p>

      {% block form %}
        {% include "form/form.njk" %}
      {% endblock %}

    </div>
  </div>
{% endblock %}