{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "es2020",
    "incremental": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "lib": ["es2020", "dom.iterable", "dom"],
  }
}
