{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "commonjs",
    "esModuleInterop": true,
    "incremental": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "lib": ["es2020", "dom.iterable", "dom"],
    "baseUrl": "src/main",
    "paths": {
      "router/*": ["router/*"],
      "routes/*": ["routes/*"]
    },
    "typeRoots": ["./node_modules/@types"]
  }
}
