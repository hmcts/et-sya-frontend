{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "_comment": "This config was generated using 'stryker init'. Please take a look at: https://stryker-mutator.io/docs/stryker-js/configuration/ for more information.",
  "packageManager": "yarn",
  "reporters": [
    "html",
    "clear-text",
    "progress"
  ],
  
  "testRunner": "jest",
  "testRunner_comment": "Take a look at https://stryker-mutator.io/docs/stryker-js/jest-runner for information about the jest plugin.",
  "coverageAnalysis": "perTest",
  "timeoutFactor": 3,
  "timeoutMS": 10000,
  "incremental": true,
  "maxTestRunnerReuse": 25,
  "mutate": [
    "src/main/assets/**/*.ts",
    "src/main/components/**/*.ts",
    "src/main/controllers/**/*.ts",
    "src/main/services/**/*.ts",
    "src/main/auth/**/*.ts",
    "src/main/definitions/**/*.ts", 
    "src/main/utils/**/*.ts",
    "src/main/helpers/**/*.ts",
    "!**/__mocks__/**",
    "!**/mocks/**",
    "!**/*.d.ts"
  ],
  "jest": {
    "configFile": "jest.unit.config.js",
    "enableFindRelatedTests": true
  }
}